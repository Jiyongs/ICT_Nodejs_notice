<!-- views/posts/index.ejs -->
<!-- 글 목록 화면 구성 -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container post post-index">
   <% include ./partials/header %>

   <div class="buttons">
    <a class="btn btn-default" href="/posts/new">글 작성</a>
   </div>

   <table class="table table-striped posts">
    <thead>
     <tr>
      <th class="title">제목</th>
      <th class="date">날짜</th>
     </tr>
    </thead>
    <tbody>
     <% if(posts == null || posts.length == 0){ %>
      <tr>
       <td class="noData" colspan=100> 새 글이 존재하지 않습니다. </td>
      </tr>
     <% } %>
     <% posts.forEach(function(post) { %>
      <tr>
       <td class="title">
        <a href="/posts/<%= post._id %>"><div><%= post.title %></div></a>
       </td>
       <td class="date">
        <%= post.createdDate %>
       </td>
      </tr>
     <% }) %>
    </tbody>
   </table>
  </div> <!-- container end -->
 </body>
</html>