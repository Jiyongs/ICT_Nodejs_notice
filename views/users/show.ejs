<!-- views/users/show.ejs -->
<!-- 내 정보 조회 화면 구성 -->

<!DOCTYPE html>
<html>
 <head>
  <% include ../partials/head %>
 </head>
 <body>
  <% include ../partials/nav %>

  <div class="container user user-show">

   <div class="buttons">
    <a class="btn btn-default" href="/users">회원목록</a>
    <% if(isAuthenticated && currentUser.id == user.id) { %>  <!-- 로그인 && 조회 회원정보id==로그인id 인 경우만 정보 수정 버튼 보임 -->
    <a class="btn btn-default" href="/users/<%= user.username %>/edit">수정</a>
    <% } %>
    </div>

   <form class="user-form form-horizontal" action="/users" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop"><%= user.username %></h3>
     <fieldset disabled>
      <div class="form-group">
       <label for="name" class="col-sm-3">이름</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
       </div>
      </div>
      <div class="form-group">
       <label for="email" class="col-sm-3">Email</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
       </div>
      </div>
     </fieldset>
    </div>
   </form>

  </div> <!-- container end -->
 </body>
</html>